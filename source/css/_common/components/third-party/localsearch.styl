.search-result-list li{
  list-style-type: none;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
ul.search-result-list {
  padding-left: 0px;
  margin: 0px 0px 0px 12px;
}
a.search-result-title {
  font-weight: bold;
}
a.search-result {
  border-bottom: transparent;
}
p.search-result {
  color=#555;
}
.search-keyword {
  border-bottom: 1px dashed #4088b8;
  font-weight: bold;
}
#search-result {
  display: none;
  position: absolute;
  width: 158px;
  border: 1px solid #ccc;
  background: #fff;
  cursor: default;
  overflow: auto;
  margin: 0px;
  z-index: 999;
}
#local-search-result {
  scroll:auto;
  overflow:auto;
  max-height:3in;
}

.popup {
  display: none;
  position: absolute;
  top: 100px;
  left: 50%;
  width: 700px;
  min-height: 300px;
  margin-left: -350px;
  padding: 0px 10px;
  background: #fff;
  color: #333;
  border: 1px solid #150E2D;
  z-index: 9999;
  -webkit-border-radius: 5px;
  border-radius: 5px;
}
#local-search-input {
  width: 50%;
}
.popup-mobile {
  position: relative;
  top: 0;
  left: 0;
  margin: 30px 0 0;
  width: inherit;
}
.popup-btn-close {
  position: absolute;
  top: 8px;
  right: 14px;
  color: #4EBD79;
  font-size: 14px;
  font-weight: bold;
  text-transform: uppercase;
  cursor: pointer;
}